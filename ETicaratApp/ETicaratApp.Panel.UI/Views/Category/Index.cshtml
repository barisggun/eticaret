@using ETicaretApp_EntityLayer.Concrete
@model List<Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section HeaderCss{
    <!-- select2 css -->
    <link href="~/admin/assets/libs/select2/css/select2.min.css" rel="stylesheet" type="text/css" />

    <!-- dropzone css -->
    <link href="~/admin/assets/libs/dropzone/min/dropzone.min.css" rel="stylesheet" type="text/css" />
}
@section FooterJs{
    <!-- select 2 plugin -->
    <script src="~/admin/assets/libs/select2/js/select2.min.js"></script>

    <!-- dropzone plugin -->
    <script src="~/admin/assets/libs/dropzone/min/dropzone.min.js"></script>

    <!-- init js -->
    <script src="~/admin/assets/js/pages/ecommerce-select2.init.js"></script>
}
<div class="main-content">

    <div class="page-content">
        <div class="container-fluid">

            <!-- start page title -->
            <div class="row">
                <div class="col-12">
                    <h1>Index</h1>

                    <p>
                        <a asp-action="Create">Create New</a>
                    </p>

                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    CategoryName
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CategoryName)
                                    </td>
                                    <td>
                                        <a asp-action="DeleteCategory" class="btn btn-danger btn-sm" asp-route-id="@item.Id"><i class="fa fa-trash"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
