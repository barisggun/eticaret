@model ETicaretApp_EntityLayer.Concrete.Category

@{
    ViewData["Title"] = "Cre";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section HeaderCss{
    <!-- select2 css -->
    <link href="~/admin/assets/libs/select2/css/select2.min.css" rel="stylesheet" type="text/css" />

    <!-- dropzone css -->
    <link href="~/admin/assets/libs/dropzone/min/dropzone.min.css" rel="stylesheet" type="text/css" />
}
@section FooterJs{
    <!-- select 2 plugin -->
    <script src="~/admin/assets/libs/select2/js/select2.min.js"></script>

    <!-- dropzone plugin -->
    <script src="~/admin/assets/libs/dropzone/min/dropzone.min.js"></script>

    <!-- init js -->
    <script src="~/admin/assets/js/pages/ecommerce-select2.init.js"></script>
}

<div class="main-content">

    <div class="page-content">
        <div class="container-fluid">

            <!-- start page title -->
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                        <h4 class="mb-sm-0 font-size-18">Ürün Ekleme Ekranı</h4>

                        <div class="page-title-right">
                            <ol class="breadcrumb m-0">
                                <li class="breadcrumb-item"><a href="javascript: void(0);">Ecommerce</a></li>
                                <li class="breadcrumb-item active">Kategori Ekle</li>
                            </ol>
                        </div>

                    </div>
                </div>
            </div>


            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title">Bilgi</h4>
                            <p class="card-title-desc">Gerekli bütün yerleri doldurunuz.</p>
                        </div>
                        <div class="card-body">
                            <form method="post" enctype="multipart/form-data">
                                <div class="row">
                                    <div class="col-sm-6">
                                        
                                        <div class="mb-3">
                                            <label asp-for="CategoryName">Kategori Adı</label>
                                            <input asp-for="CategoryName" type="text" class="form-control">
                                            <span asp-validation-for="CategoryName" class="text-danger"></span>
                                        </div>

                                        <div class="mb-3">
                                            <label asp-for="CategoryName">Alt Kategori Adı</label>
                                            <input asp-for="CategoryName" type="text" class="form-control">
                                            <span asp-validation-for="CategoryName" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <div class="d-flex flex-wrap gap-2">
                                    <button type="submit" class="btn btn-primary waves-effect waves-light">Değişiklikleri Kaydet</button>
                                    <a asp-action="Index" class="btn btn-secondary waves-effect waves-light">Geri Dön</a>

                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>


        </div> 
    </div>

